---
import {
  calculateAbsoluteDate,
  formatTime,
  localizeTime,
} from "../utils/dateUtils";

interface Props {
  relativeDate: {
    week: number;
    day: number | string;
    time: string;
  };
  label?: string;
}

const { relativeDate, label = "" } = Astro.props;
const date = formatTime(localizeTime(calculateAbsoluteDate(relativeDate)));
---

<strong>{label && `${label}:`}</strong>
{date}
